<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.slavafleer.musicalarm.MainActivity">


    <Button
        android:id="@+id/buttonSetTAlarmTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:onClick="buttonSetTAlarmTime_onClick"
        android:text="Set Alarm Time"/>

    <Button
        android:id="@+id/buttonCancelAlarm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="buttonCancelAlarm_onClick"
        android:text="Cancel Alarm"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewTones"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/buttonCancelAlarm"
        android:layout_below="@+id/buttonSetTAlarmTime"/>

</RelativeLayout>
